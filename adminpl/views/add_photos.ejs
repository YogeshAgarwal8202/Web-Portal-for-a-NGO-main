		<%- include('Sidebar'); -%>
		
		<%- include('Header'); -%>
		
		<!-- main content start-->
		<div id="page-wrapper">
			<div class="main-page">
				<div class="forms">
					<h2 class="title1">Add Photos :</h2>
					<div class="form-two widget-shadow">
						
						<div class="form-body" data-example-id="simple-form-inline">
							<form class="form-horizontal" id="managengo" method="POST" enctype="multipart/form-data" action="add_event_images">
                                <div class="form-group">
									<label for="focusedinput1" class="col-sm-2 control-label">Select Event: </label>
									<div class="col-sm-8">
										<input onkeypress="false;" list="evt" name="event_id" id="event_id" class="form-control" placeholder="Select an Option" required>
										<datalist  id="evt">
										<% for(var i=0; i<db_rows.length; i++) { %>
									
											<option data-value="<%= db_rows[i].event_id %>"><%= moment(db_rows[i].event_date).format('DD-MMM-YYYY'); %> <%= db_rows[i].event_title %></option>
								
											
										<% } %>  
										</datalist>
									</div>
								</div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-2 control-label">Upload Image(s): </label>
                                    <div class="col-sm-8">
                                        <input type="file" class="form-control1" id="image_path" name="image_path" placeholder="Select Images" multiple required>
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="help-block">Each file should not exceed 1MB</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&ensp;      
                                    <button type="submit" class="btn btn-default" onclick="alert('The record added successfully')">Add</button>
                                    <button type="reset" class="btn btn-danger" onclick="alert('All fields are cleared')">Reset</button> 
                                </div>
                            </form>
						</div>
					</div>
					<br><br><br><br><br><br><br><br><br><br><br><br><br>
				</div>
			</div>
		</div>

   <script src="js/bootstrap.js"> </script>
	
	<!-- Jquery Validatio Code Start -->
		<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/additional-methods.js"></script>
		<!--jQuery Validation-->
		<script>
        var imgnum = document.getElementById('image_path').files.length+1;
		$(document).ready(function(){
            $("#managengo").validate({
                rules: {
					event_id:{
						required: true,
					},
                    image_path: {
						required: true,
                        accept: "image/*",
                        maxsizetotal:  imgnum*2000000 
                    }
                },
                messages: {
					event_id:{
						accept: "Please Choose one event.",
						required: "This field is required."
					},
                    image_path: {
                        accept: "This field must only consists images.",
                        required: "This field is required.",
                        maxsizetotal:  "Input exceeds total file size limit."
                    }
                }
            });
		});
        </script>
        <style>
			.error{
				color:#d9534f;
			}
		</style>
	<!-- Jquery Validatio Code End -->


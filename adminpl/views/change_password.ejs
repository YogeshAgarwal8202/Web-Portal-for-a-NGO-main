	<!-- Jquery Validatio Code Start -->
	<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/additional-methods.js"></script>
    <!--jQuery Validation-->
	<script>
		jQuery.validator.addMethod("accept", function(value, element, param) {
    		return value.match(new RegExp("^" + param + "$"));
		});

		$.validator.addMethod("pwcheck", function(value) {
   			return /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) // consists of only these
       		&& /[a-z]/.test(value) // has a lowercase letter
			&& /[A-Z]/.test(value) // has a uppercase letter
       		&& /\d/.test(value) // has a digit
			&& /\W/.test(value) // has a special character
		});

		$("#change_password").validate({
			rules: {
				oldpassword: {
					required: true,
					minlength: "8",
					pwcheck: true
					
				},
				password: {
					required: true,
					minlength: "8",
					pwcheck: true
					
				},
				conformpassword: {
					required: true,
					equalTo: "#password"
				}
			},
			messages: {
				oldpassword: {
					required: "This field is required.",
					minlength: "This field must consist of minimun 8 digits.",
					pwcheck: "This field must consist atleast one uppercase, one lowercase, one number and one special character."
				},
				password: {
					required: "This field is required.",
					minlength: "This field must consist of minimun 8 digits.",
					pwcheck: "This field must consist atleast one uppercase, one lowercase, one number and one special character."
				},
				conformpassword: {
					required: "This field is required.",
					equalTo: "Passwords does not match."
				}
			},
		});
	</script>
	<style>
		.error{
			color:#d9534f;
		}
	</style>
	<!-- Jquery Validatio Code End -->
   
